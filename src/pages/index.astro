---
import Social from "../components/Social.astro";
import Github from "../icons/Github.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";
import Clipboard from "../icons/Clipboard.astro";
import Briefcase from "../icons/Briefcase.astro";
import Tool from "../icons/Tool.astro";
import Chat from "../icons/Chat.astro";
import Phone from "../icons/Phone.astro";

import Experience from "../components/Experience.astro";
import SkillCards from "../components/SkillCards.astro";
import Reviews from "../components/Reviews.astro";
import Contact from "../components/Contact.astro";

import Layout from "../layouts/layout.astro";
---

<Layout
	title="Sebastian Portfolio - Software Developer"
	description="Hire Sebastian to develop your next Application!"
>
	<main class="flex flex-col items-center justify-center gap-6">

		{/* Introduction */}

		<section id="hero" class="w-[80%] lg:w-[48rem] py-8 lg:py-24 mx-auto">
			<aside class="flex flex-row items-center gap-x-6 mb-5">
				<img class="rounded-full size-20" src="/profile.jpg" alt="sebastian" />
			</aside>
			<h1 class="flex flex-wrap flex-row gap-x-4 text-5xl md:text-6xl font-bold pb-4">
				<span class="text-transparent bg-clip-text bg-gradient-to-br from-[#d2a4e5] to-[#c19ee0]">
					Sebastián
				</span>
				Hernández
			</h1>
			<h2 class="text-2xl font-semibold pb-2">
				Software developer / Frontend & Backend developer
			</h2>
			<p class="text-lg font-thin text-[#ffffffcc] pb-1">
				Passionate software developer with 2.5 years of experience, specialized in creating <span class="text-[#befdf5] font-semibold">web applications and websites.</span> With a commitment to quality and a focus on user experience, I strive to deliver solutions that not only meet but exceed client expectations.
			</p>

			<nav class="flex flex-wrap flex-row items-center gap-4 py-5">

				<Social title="GitHub" href="https://github.com/Seeker4264/">
					<Github class="size-5" />
				</Social>
				<Social title="LinkedIn" href="https://www.linkedin.com/in/sebasti%C3%A1n-hern%C3%A1ndez-803355296/">
					<LinkedIn class="size-5" />
				</Social>
				<Social title="Contact me" href="mailto:sebashmorales@gmail.com">
					<Mail class="size-5" />
				</Social>
				<Social title="Download CV" href="/cv.pdf">
					<Clipboard class="size-5" />
				</Social>
				
			</nav>
		</section>

		{/* Experience */}

		<section id="experience" class="relative w-[80%] lg:w-[56rem] py-16 mx-auto">
			<div class="flex flex-row items-center gap-4 pb-12">
				<Briefcase class="size-12 sm:size-12 text-[#97DFFC]" />
				<h2 class="inline-block text-4xl sm:text-5xl font-bold bg-gradient-to-br from-[#97DFFC] to-[#93CAF6] text-transparent bg-clip-text">
					Experience
				</h2>
			</div>

			<div class="absolute rounded-full w-[0.15rem] h-[60%] mt-[12px] ml-[8px] sm:ml-[11px] z-[-1] bg-gradient-to-b from-[#858AE3] via-[#7364D2] to-transparent" />

			<Experience />
		</section>

		{/* Reviews */}

		<section id="reviews" class="relative w-[80%] lg:w-[56rem] py-16 mx-auto">
			<div class="flex flex-row items-center gap-4 pb-12">
				<Chat class="size-12 sm:size-12 text-[#97DFFC]" />
				<h2 class="inline-block text-4xl sm:text-5xl font-bold bg-gradient-to-br from-[#97DFFC] to-[#93CAF6] text-transparent bg-clip-text">
					Reviews
				</h2>
			</div>

			<Reviews />
		</section>

		{/* Skills */}

		<section id="skills" class="relative w-[80%] lg:w-[56rem] py-16 mx-auto">
			<div class="flex flex-row items-center gap-4 pb-12">
				<Tool class="size-12 sm:size-12 text-[#97DFFC]" />
				<h2 class="inline-block text-4xl sm:text-5xl font-bold bg-gradient-to-br from-[#97DFFC] to-[#93CAF6] text-transparent bg-clip-text">
					Skills
				</h2>
			</div>

			<SkillCards />
		</section>

		{/* Contact */}

		<section id="skills" class="relative w-[80%] lg:w-[56rem] py-16 mx-auto">
			<div class="flex flex-row items-center gap-4 pb-12">
				<Phone class="size-12 sm:size-12 text-[#97DFFC]" />
				<h2 class="inline-block text-4xl sm:text-5xl font-bold bg-gradient-to-br from-[#97DFFC] to-[#93CAF6] text-transparent bg-clip-text">
					Contact
				</h2>
			</div>

			<Contact />
		</section>

	</main>
</Layout>